<%- include('partial_headers.ejs'); %>
    <h1>Edit Single person</h1>

    <p><a href='/persons/list'>&raquo; Back to the list</a></p>
    <form action='/persons/update/<%= oneperson.person_id %>' method='post' enctype='application/x-www-form-urlencoded'>
        <table class="table table-striped table-bordered table-hover">

            <tr>
                <td>ID</td>
                <td> <input type='text' name='person_id' value='<%= oneperson.person_id %>' /></td>
            </tr>

            <tr>
                <td>Name</td>
                <td> <input type='text' name='person_name' value='<%= oneperson.person_name %>' /></td>
            </tr>


            <tr>
                <td colspan='2'> <input type='submit' value='SEND' /></td>
            </tr>
        </table>
    </form>
    </body>

    </html>